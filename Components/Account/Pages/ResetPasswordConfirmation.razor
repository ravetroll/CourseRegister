@page "/Account/ResetPasswordConfirmation"
@using MudBlazor

<PageTitle>Reset password confirmation</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column align-center text-center">
    <MudText Typo="Typo.h4" GutterBottom="true">Reset password confirmation</MudText>
    <MudAlert Severity="Severity.Success" Class="mt-4">
        Your password has been reset. Please <MudLink Href="Account/Login">click here to log in</MudLink>.
    </MudAlert>
</MudContainer>